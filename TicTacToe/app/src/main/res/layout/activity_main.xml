<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ly.generalassemb.drewmahrt.tictactoe.MainActivity"
    android:background="#F5F5DC">


    <EditText
        android:id="@+id/player_one_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Player One's Name"
        android:textAlignment="center"
        android:layout_above="@+id/player_two_name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/player_two_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Player Two's Name"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/player_one_name"
        android:layout_alignStart="@+id/player_one_name" />

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:onClick="whenStartPlayingClicked"
        android:text="Start Playing!"
        android:layout_marginTop="45dp"
        android:background="#3CB371"
        android:textColor="#F5FFFA"
        android:layout_below="@+id/player_two_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/last_winner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous Winner:"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#3CB371"/>
    <TextView
        android:id="@+id/player1tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="Player one"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#0000FF"/>

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/player1tv"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:text="VS."
        android:textColor="#DC143C"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/player2tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/player1tv"
        android:layout_alignStart="@+id/player1tv"
        android:layout_below="@+id/vs"
        android:fontFamily="casual"
        android:text="Player two"
        android:textColor="#FF00FF"
        android:textStyle="bold"
        android:textSize="30sp" />

</RelativeLayout>
