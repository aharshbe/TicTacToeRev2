<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ly.generalassemb.drewmahrt.tictactoe.MainActivity">




    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/letsplay" />

    <TextView
        android:id="@+id/last_winner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Previous Winner:"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/player_one_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Player One's Name"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/player_two_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Player Two's Name"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/player_one_name"
        android:layout_alignLeft="@+id/player_one_name"
        android:layout_alignStart="@+id/player_one_name" />

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#000"
        android:onClick="whenStartPlayingClicked"
        android:text="Start Playing!"
        android:textColor="#F5FFFA" />


</RelativeLayout>
